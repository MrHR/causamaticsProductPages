@model EmotionArchive
@{
    ViewData["Title"] = !string.IsNullOrEmpty(Model.MetaTitle) ? Model.MetaTitle : Model.Title;
    var hasImage = Model.PrimaryImage.HasValue;
}
@section head {
    @WebApp.MetaTags(Model)
}
 <!--[if lt IE 7]>
    <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
<![endif]-->

<div id="color_tone"></div>
<div id="trance_gif"></div>
<div id="overlay_lines"></div>

<audio id="player" controls controlsList="nodownload">
    @* <source src="~/assets/audio/HOUSE_OF_SUN_y_bourdin_HIBOU537_LC06881_LV.mp3" type="audio/mpeg"> *@
    <source src="@Url.Content(Model.Emotion.Audio)" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<div id="image_container">
    <span class="helper"></span>
    <img id="animation_image" src="@Url.Content(Model.Emotion.Afbeelding)">   
</div>

<div id="description_container">
    <div id="buttons_container" onkeypress="keypressed(event)">
        <img onclick="player_rewind()" src="~/assets/img/player/rewind.svg" alt="rewind animation" class="player_button">
        <img onclick="player_play()" src="~/assets/img/player/play.svg" alt="play animation" class="player_button" id="play_button">
        <img onclick="player_pause()" src="~/assets/img/player/pause.svg" alt="pause animation" class="player_button" id="pause_button">
        <img onclick="mute()" src="~/assets/img/player/mute.svg" alt="mute animation" class="player_button" id="mute_button">
        <img onclick="toggleFullScreen()" src="~/assets/img/player/fullscreen.svg" alt="enter or exit fullscreen" class="player_button" id="toggle_button">
    </div>
    
    @if (!string.IsNullOrWhiteSpace(Model.Emotion.Quote)) 
    { 
        <p id="description">@Html.Raw(Model.Emotion.Quote) </p>
    }     
</div>

<div id="progressbar"><div id="progress"></div></div>

<video autoplay="true" muted="muted" loop>
<source src="~/assets/vid/blank.m4v" type="video/mp4">
<source src="~/assets/vid/blank.ogv" type="video/ogg">
<source src="~/assets/vid/blank.webm" type="video/webm">
</video>

<div id="tilt_overlay">
<img src="~/assets/img/player/tilt.png">
</div>


<script src="~/assets/js/image-animation.js"></script> <!-- needs to be loaded after DOM is loaded -->
<script src="~/assets/js/player.js"></script> <!-- needs to be loaded after DOM is loaded -->
<script src="~/assets/js/client-index.js"></script> <!-- needs to be loaded after DOM is loaded -->


